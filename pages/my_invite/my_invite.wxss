.invitList {
  position: relative;
  top: 20rpx;
  width: 750rpx;
  background: #fff;
}

.item {
  height: 156rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx 0 31rpx;
}

.avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: pink;
}

.personInfo .name {
  height: 30rpx;
  font-size: 32rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
  line-height: 30rpx;
}
.personInfo {
  position: absolute;
  left: 164rpx;
  top: 47rpx;
  height: 63rpx;
}
.personInfo .phone {
  height: 18rpx;
  font-size: 22rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 18rpx;
}

.item .date {
  height: 22rpx;
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
