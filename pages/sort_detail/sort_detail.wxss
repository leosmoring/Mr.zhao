/* 购物车 */

.cart {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 95rpx;
  background: rgba(255, 255, 255, 1);
}

.icon {
  position: relative;
  width: 203rpx;
  height: 95rpx;
  float: left;
  background: #000;
}

.number {
  position: absolute;
  left: 107rpx;
  top: 19rpx;
  width: 44rpx;
  height: 27rpx;
  background: rgba(88, 181, 48, 1);
  border-radius: 10rpx;
  text-align: left;
  line-height: 27rpx;
}

.number .text {
  position: relative;
  height: 19rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding-left: 5rpx;
}

.number .text::after {
  content: "+";
  display: block;
  width: 9rpx;
  height: 9rpx;
  position: absolute;
  right: 9rpx;
  top: -10rpx;
  z-index: 99;
  color: #fff;
}

.gotoCart {
  float: right;
  width: 547rpx;
  height: 95rpx;
  background: rgba(88, 181, 48, 1);
  box-shadow: 0px 0px 24px 0px rgba(127, 130, 125, 0.26);
  text-align: center;
}

.gotoCart .text {
  height: 30rpx;
  font-size: 30rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 95rpx;
}
