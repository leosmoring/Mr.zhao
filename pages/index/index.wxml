<import src="../../component/swiper.wxml" />
<view class='indexPage'>
  <!-- 首页签到弹窗模块 start -->
  <block wx:if="{{showSignIn}}">
    <view class='Mask'>
      <view class='signIn'>
        <image src="../../assets/signIn.png" mode='widthFix'></image>
        <view class='greenText'>恭喜您今日签到成功！</view>
        <view class='add'>+10积分</view>
        <view class='greenBtn' bindtap='toSignIn'>确认</view>
      </view>
    </view>
  </block>
  <!-- 首页签到弹窗模块 end -->
  <!-- 首页优惠券弹窗模块 start -->
  <block wx:if="{{hasYouhuiquan}}">
    <view class='Mask'>
      <view class='quan'>
        <image class='redImg' src="../../assets/icon/index_youhui.png" mode='widthFix'></image>
        <view class='quan_title'>领取优惠券</view>
        <view class='ticket'>
          <view class='get'>领取</view>
          <view class='upBox'>
            <view class='priceBox columnBetween'>
              <view class='bigPrice'>
                <view class='symbol'>￥</view>
                <view class='price'>10</view>
              </view>
            </view>
            <view class='contentBox columnBetweenStart'>
              <view class='title'>兆鲜生10元优惠券
              </view>
              <view class='normal'>满158元可用</view>
              <view class='normal'>会员、非会员通用
              </view>
            </view>
          </view>
          <view class='bottomBox'>
            <view class='text'>有效期：2018-12-18 至 2018-12-30</view>
          </view>
        </view>

        <view class='ticket'>
          <view class='get'>领取</view>
          <view class='upBox'>
            <view class='priceBox columnBetween'>
              <view class='bigPrice'>
                <view class='symbol'>￥</view>
                <view class='price'>10</view>
              </view>
            </view>
            <view class='contentBox columnBetweenStart'>
              <view class='title'>兆鲜生10元优惠券
              </view>
              <view class='normal'>满158元可用</view>
              <view class='normal'>会员、非会员通用
              </view>
            </view>
          </view>
          <view class='bottomBox'>
            <view class='text'>有效期：2018-12-18 至 2018-12-30</view>
          </view>
        </view>
      </view>
      <image class='index_delete' src="../../assets/icon/index_delete.png" mode='widthFix' bindtap='closeYouhuoquan'></image>
    </view>
  </block>
  <!-- 首页优惠券弹窗模块 end -->
  <image class='ad' mode="widthFix" src="../../assets/invite.png"></image>
  <view class='header borderBox oneLineEnd'>
    <image class='avator' mode="widthFix" src="../../assets/logo.png"></image>
    <view class='location ellipsis' bindtap='toSelectAddress' data-address="{{address}}">{{shortAddress}}</view>
    <image class='location_arrow' src="../../assets/toBottom.png" mode="widthFix"></image>
    <input class='inputText borderBox' disabled placeholder='搜索' placeholder-class='place_input' bindtap='test'></input>
    <image class='input_searchIcon' src="../../assets/search.png" mode="widthFix"></image>
  </view>
  <view class='menu borderBox oneLineBetween'>
    <view class='menuItem' bindtap='toLifeService'>
      <image class='menuItem_img' mode="widthFix" src="../../assets/lifeService.png"></image>
      <view class='menuItem_text'>生活服务</view>
    </view>
    <view class='menuItem' bindtap='toPlus'>
      <image class='menuItem_img' mode="widthFix" src="../../assets/plus.png"></image>
      <view class='menuItem_text'>plus会员</view>
    </view>
    <view class='menuItem' bindtap='toInviteFriend'>
      <image class='menuItem_img' mode="widthFix" src="../../assets/star.png"></image>
      <view class='menuItem_text'>推荐好友</view>
    </view>
    <view class='menuItem' bindtap='toSignIn'>
      <image class='menuItem_img' mode="widthFix" src="../../assets/calendar.png"></image>
      <view class='menuItem_text'>每日签到</view>
    </view>
  </view>
  <!-- 轮播 -->
  <view class='Carousel'>
    <template is="swiper" data="{{bannerList:bannerList,swiperCurrent:swiperCurrent,indicatorDots:indicatorDots,RootUrl:RootUrl}}" />
  </view>
  <!-- 子菜单 -->
  <view class='subMenu f-wrap  borderBox oneLineBetween mulitLineBetween'>
    <block wx:for="{{categoryList}}" wx:key="">
      <view class='subNemuItem'>
        <image class='subMenuItem_img' mode="widthFix" src="{{item.img}}"></image>
        <view class='subMenuItem_text'>{{item.name}}</view>
      </view>
    </block>
  </view>
  <view class='gap' style='height:20rpx;'></view>
  <!-- 热卖商品开始 -->
  <view class='hotSell'>
    <view class='commonTitle'>
      <view class='title'>热卖商品</view>
      <view class='leftBorder'></view>
      <view class='rightBorder'></view>
    </view>
    <block wx:for="{{productList}}" wx:key="">
      <view class='hotSellItem borderBox oneLineBetween bor_Bottom'>
        <view class='hotSellItem_img'></view>
        <view class='hotSellItem_content hotContentFlexStyle'>
          <view class='title line-clamp '>
            蒙牛特仑苏纯牛奶250ml*16 礼盒装礼盒装礼盒装
          </view>
          <view class='introduction line-clamp'> 蒙牛特仑苏纯牛奶250ml*16 礼盒装礼盒装礼盒装 </view>
          <view class='price nowrap'>¥69.9999</view>
          <view class='offerPrice nowrap'>¥69.9999
            <image class='youhuiBox' src="../../assets/youhuiBox.png" mode="widthFix">
              <view class='youhuiText'>会员9折</view>
            </image>
          </view>
          <image class='shopping' src="../../assets/shopping.png" mode="widthFix"></image>
        </view>
      </view>
    </block>
  </view>
</view>
<view class='gap' style='height:20rpx;'></view>
<view class='hotSell'>
  <view class='commonTitle'>
    <view class='title'>推荐购买</view>
    <view class='leftBorder'></view>
    <view class='rightBorder'></view>
  </view>
  <block wx:for="recommendList" wx:key="">
    <view class='hotSellItem borderBox oneLineBetween bor_Bottom'>
      <view class='hotSellItem_img'></view>
      <view class='hotSellItem_content hotContentFlexStyle'>
        <view class='title line-clamp '>
          蒙牛特仑苏纯牛奶250ml*16 礼盒装礼盒装礼盒装
        </view>
        <view class='introduction line-clamp'> 蒙牛特仑苏纯牛奶250ml*16 礼盒装礼盒装礼盒装 </view>
        <view class='price nowrap'>¥69.9999</view>
        <view class='offerPrice nowrap'>¥69.9999
          <image class='youhuiBox' src="../../assets/youhuiBox.png" mode="widthFix">
            <view class='youhuiText'>会员9折</view>
          </image>
        </view>
        <image class='shopping' src="../../assets/shopping.png" mode="widthFix"></image>
      </view>
    </view>
  </block>
</view>