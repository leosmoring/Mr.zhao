    height: 45rpx;
    background: rgba(240, 240, 240, 1);
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.keyWords .text {
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.flexStyle {
    display: flex;
    align-content: space-between;
}

.keyWords .item {
    margin-right: 30rpx;
