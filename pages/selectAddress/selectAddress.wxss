/* pages/selectAddress/selectAddress.wxss */

.searchAndNowAddress {
  width: 750rpx;
  height: 226rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx 22rpx;
  background: rgba(255, 255, 255, 1);
}

.myShippingAddress {
  margin-top: 20rpx;
  width: 750rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.searchInp {
  width: 690rpx;
  height: 60rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 30rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
}

.place {
  height: 27rpx;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(204, 204, 204, 1);
}

.searchIcon {
  position: absolute;
  left: 60rpx;
  top: 35rpx;
  width: 30rpx;
  height: 30rpx;
  background: pink;
}

.currentCityName {
  height: 28rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
  line-height: 28rpx;
}

.refreshLocation {
  width: 100%;
}

.refresh {
  display: flex;
  align-items: center;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(88, 181, 48, 1);
}

.refresh image {
  width: 28rpx;
  margin-right: 9rpx;
}

.current {
  height: 26rpx;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.myShippingAddress .title {
  height: 32rpx;
  width: 100%;
  line-height: 32rpx;
  font-size: 32rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
}

.itemAddress {
  width: 100%;
  height: 132rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.itemAddress .upBox {
  height: 29rpx;
  line-height: 29rpx;
  width: 100%;
}

.underBox {
  width: 100%;
  height: 23rpx;
  font-size: 26rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 23rpx;
}

.greenBox {
  width: 54rpx;
  height: 26rpx;
  background: rgba(240, 255, 234, 1);
  border: 1px solid rgba(88, 181, 48, 1);
  border-radius: 13rpx;
  text-align: center;
  margin-right: 11rpx;
}

.greenBox .text {
  height: 16rpx;
  font-size: 16rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(88, 181, 48, 1);
  line-height: 26rpx;
}

.upBox .address {
  height: 29rpx;
  font-size: 30rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(26, 26, 26, 1);
}
.borderBottom {
  border-bottom: 1px solid #E0E0E0;
}